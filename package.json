{
  "name": "tapw",
  "private": true,
  "version": "0.0.0",
  "author": "David Adamson",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others \"vite\" \"tsx watch src/main.dev.ts\"",
    "check:types": "vue-tsc --noEmit",
    "check:format": "prettier --ignore-path .gitignore --check .",
    "check:lint": "eslint",
    "test:e2e": "cypress run --browser chrome",
    "build": "vite build && esbuild src/main.prod.ts --bundle --minify --sourcemap --platform=node --format=esm --packages=external --outfile=dist/main.js",
    "start": "node --enable-source-maps dist/main.js",
    "build:vercel": "vite build",
    "build:netlify": "vite build && esbuild src/main.prod.netlify.ts --bundle --minify --platform=neutral --outfile=netlify/edge-functions/index.js",
    "build:cloudflare": "vite build && esbuild src/main.prod.cloudflare.ts --bundle --minify --platform=neutral --outfile=functions/api/[[catchall]].js",
    "build:deno": "vite build && esbuild src/main.prod.deno.ts --bundle --minify --platform=node --format=esm --outfile=dist/main.js"
  },
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.2",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/serverless": "^3.52.1",
    "hono": "^4.9.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.19.0",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/jetbrains-mono": "^5.2.6",
    "@hono/swagger-ui": "^0.5.2",
    "@iconify-icons/uil": "^1.2.3",
    "@iconify/vue": "^5.0.0",
    "@ts-rest/open-api": "^3.52.1",
    "@types/node": "^22.18.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cypress": "^15.2.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "vue-tsc": "^3.0.6"
  }
}
