{
  "name": "tapw",
  "private": true,
  "version": "0.0.0",
  "author": "David Adamson",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently --kill-others \"vite\" \"tsx watch --ignore 'vite.config.ts.timestamp-*.mjs' --ignore 'src/client/**/*' src/main.dev.ts\"",
    "check:types": "vue-tsc --noEmit",
    "check:format": "prettier --ignore-path .gitignore --check .",
    "check:lint": "eslint --ext .vue,.ts --ignore-path .gitignore .",
    "test:e2e": "cypress run --browser chrome",
    "build": "vite build && esbuild src/main.prod.ts --bundle --sourcemap --platform=node --outfile=dist/main.js",
    "start": "node --enable-source-maps dist/main.js",
    "build:vercel": "vite build",
    "build:netlify": "vite build && esbuild src/main.prod.netlify.ts --bundle --sourcemap --platform=neutral --outfile=netlify/edge-functions/index.js",
    "build:cloudflare": "vite build && esbuild src/main.prod.cloudflare.ts --bundle --sourcemap --platform=neutral --outfile=functions/api/[[catchall]].js"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.20",
    "@fontsource-variable/jetbrains-mono": "^5.0.21",
    "@hono/node-server": "^1.12.0",
    "@iconify-icons/uil": "^1.2.3",
    "@iconify/vue": "^4.1.2",
    "@ts-rest/core": "^3.49.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "hono": "^3.12.12",
    "radix-vue": "^1.9.2",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-rest-hono": "^0.5.0",
    "vue": "^3.4.35",
    "vue-router": "^4.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hono/swagger-ui": "^0.4.0",
    "@ts-rest/open-api": "^3.49.2",
    "@types/node": "^20.14.13",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cypress": "^13.13.2",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.4.0",
    "eslint-plugin-vue": "^9.27.0",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.7",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vue-tsc": "^2.0.29"
  }
}
